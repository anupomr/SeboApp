<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="headingOne">
        <item name="android:textColor">#f44404</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="orderDetails">
        <item name="android:textColor">#0454f4</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="staffButtonStyle" parent="android:Widget.DeviceDefault.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#800000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fadingEdge">none|horizontal|vertical</item>
    </style>
    <style name="customerInfoStyle" parent="staffButtonStyle">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#800000</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
